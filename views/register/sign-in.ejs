<div class="controller" ng-controller="signInCtrl">
  <div class="alert alert-danger" role="alert" ng-show="valid.length > 0">
    <strong>{{valid}}</strong>
  </div>
  <div class="page-content container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-wrapper">
          <div class="box">
            <div class="content-wrap">
              <h6>Sign In</h6>
              <input class="form-control" ng-model="register.email" type="text" placeholder="E-mail address" required>
              <input class="form-control" ng-model="register.password" type="password" placeholder="Password" required>
              <div class="action">
                <a class="btn btn-primary signup" ng-click="login()">Sign in</a>
              </div>
            </div>
          </div>

          <div class="already">
            <p>Don't have an account yet?</p>
            <a href="/register/sign-up">Sign Up</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
