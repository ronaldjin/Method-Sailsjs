<div class="controller" ng-controller="signUpCtrl">

  <div class="page-content container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="login-wrapper">
          <div class="box">
            <div class="content-wrap">
              <h6>Sign Up</h6>
              <input class="form-control" id="firstName" ng-model="register.firstName" type="text" placeholder="FirstName">
              <input class="form-control" id="lastName" ng-model="register.lastName" type="text" placeholder="LastName">
              <input class="form-control" id="email" ng-model="register.email" type="text" placeholder="E-mail address">
              <input class="form-control" id="password" ng-model="register.password" type="password" placeholder="Password">
              <input class="form-control" id="confirmPassword"type="password" placeholder="Confirm Password">
              <div class="action">
                <button class="btn btn-primary signup" data-placement="bottom" data-toggle="popover"  data-html="true" ng-click="create()">Sign Up</button>
              </div>
            </div>
          </div>

          <div class="already">
            <p>Have an account already?</p>
            <a href="/register/sign-in">Login</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
